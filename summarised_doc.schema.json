{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "The content of the document."
    },
    "author": {
      "type": "string",
      "description": "The author of this document"
    },
    "revision": {
      "type": "string",
      "description": "The revision of this document"
    },
    "createdOn": {
      "type": "string",
      "format": "date-time",
      "description": "Date of this document created"
    },
    "lastModifiedOn": {
      "type": "string",
      "format": "date-time",
      "description": "Date of this document last modified"
    },
    "images": {
      "type": "array",
      "description": "List of images associated with the document.",
      "items": {
        "type": "object",
        "properties": {
          "img_uri": {
            "type": "string",
            "description": "URI of the image."
          },
          "img_description": {
            "type": "string",
            "description": "Description of the image."
          }
        },
        "required": [
          "img_uri",
          "img_description"
        ]
      }
    }
  },
  "required": [
    "content",
    "images"
  ]
}